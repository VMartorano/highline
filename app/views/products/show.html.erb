<center>
  <div class="container">
    <div class="inner">
      <div class="box-show">
        <%= image_tag @product.visual.url(:medium) %>
        <br>
        <strong><%= @product.name %></strong>
        <br>
        <!-- displays product content -->
        <%= @product.variety %>
        <br>
        <strong>THC Content: </strong><%= @product.thc_content %>%
        <br>
        <br>
        <div class="show-info">
          <%= @product.about %>
          <br>
          <br>
          <strong>Medical Uses: </strong><%= @product.uses %>
          <br>
          <strong>Effects: </strong><%= @product.effect %>
          <br>
          <center><%= link_to("Write a review", new_product_review_path(@product)) %></center>
          <br>

          <div class="review">
            <% @reviews.each do |review| %>

              <strong><%= review.used_for %></strong>
              <br>
              <%= review.content %>

              <% if current_user.id == review.user_id%>
                <%= link_to("Edit", edit_product_review_path(@product, review)) %>
                <%= link_to("Delete", product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"})%>
                <br>
                <br>
              <% end %>
            <% end %>
          </div>
        </div>

        <br>
        <br>
      </div>
    </div>
  </div>
</center>
